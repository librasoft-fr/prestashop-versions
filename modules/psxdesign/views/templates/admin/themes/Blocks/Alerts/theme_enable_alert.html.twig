<div class="alert alert-success d-md-flex justify-content-between">
    <div class="mb-2 mb-md-0 mr-md-2">
        <p>
            {{ 'The %s% theme has just been added.'|trans({'%s%': importedThemeDisplayName}, 'Modules.Psxdesign.Admin') }}
        </p>
    </div>
    <div class="pr-0 flex-shrink-0 d-flex" style="display:flex">
        <button type="button" class="btn btn-text mr-2" data-dismiss="alert" aria-label="Close">{{ 'Later'|trans({}, 'Modules.Psxdesign.Admin') }}</button>
            <button
                    type="button"
                    class="btn btn-success mr-2 js-open-use-theme-modal"
                    data-toggle="modal"
                    data-target="#use_theme_modal" {{ (not isSingleShopContext) ? 'disabled' : '' }}
                    data-action="{{ path('admin_themes_enable', {'themeName': importedThemeName}) }}"
                    data-theme-name="{{ importedThemeDisplayName }}"
            >
                {{ 'Use this theme'|trans({}, 'Modules.Psxdesign.Admin') }}
            </button>
    </div>
</div>
